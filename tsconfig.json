{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "build",
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.mts",
      "src/**/*.test.ts",
      "src/**/*.test.tsx"
    ],
}